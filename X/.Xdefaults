!-------------------------------------------------------------------------------
! Xft settings
!-------------------------------------------------------------------------------

Xft.dpi:                    96
Xft.antialias:              1
Xft.autohint:               0
Xft.rgba:                   rgb
Xft.hinting:                true
Xft.hintstyle:              hintslight

!-------------------------------------------------------------------------------
! URxvt settings
! Colours lifted from Solarized (http://ethanschoonover.com/solarized)
! More info at:
! http://pod.tst.eu/http://cvs.schmorp.de/rxvt-unicode/doc/rxvt.1.pod
!-------------------------------------------------------------------------------

URxvt-termName:		 		rxvt-unicode-256color
!URxvt-termName: screen-256color
!URxvt.depth:                32
URxvt.geometry:             85x22
URxvt.transparent:          true
URxvt.shading:              30
URxvt.fading:               10
URxvt.blurRadius:           5
! URxvt.urgentOnBell:         true
! URxvt.visualBell:           true
URxvt.loginShell:           true
URxvt.saveLines:            600
URxvt.internalBorder:       3
URxvt.lineSpace:            0

! Fonts
URxvt.allow_bold:           true

!URxvt.font:xft:envypn-powerline:pixelsize=13:antialias=true:hinting=true,xft:TamzenForPowerline:size=13:antialiast=true:hinting=true,xft:Powerline Symbols:size=13:antialiast=true:hinting=true
!URxvt.boldFont:xft:envypn-powerline:style=bold:pixelsize=13:antialias=true:hinting=true,xft:TamzenForPowerline:style=bold:size=13:antialiast=true:hinting=true,xft:Powerline Symbols:style=bold:size=13:antialiast=true:hinting=true
!URxvt.imFont:xft:envypn-powerline:style=regular:pixelsize=13:antialias=true:hinting=true,xft:TamzenForPowerline:style=regular:size=13:antialiast=true:hinting=true,xft:Powerline Symbols:style=regular:size=13:antialiast=true:hinting=true
!URxvt.italicFont:xft:envypn-powerline:style=italic:pizelsize=13:antialias=true:hinting=true,xft:TamzenForPowerline:style=italic:size=13:antialiast=true:hinting=true,xft:Powerline Symbols:style=italic:size=13:antialiast=true:hinting=true
!URxvt.boldItalicFont:xft:envypn-powerline:style=bold italic:pixelsize=13:antialias=true:hinting=true,xft:TamzenForPowerline:style=bold italic:size=13:antialiast=true:hinting=true,xft:Powerline Symbols:style=bold italic:size=13:antialiast=true:hinting=true


URxvt.font:xft:tamsyn:pixelsize=14:antialias=true:hinting=true,xft:TamzenForPowerline:size=13:antialiast=true:hinting=true,xft:Powerline Symbols:size=13:antialiast=true:hinting=true
URxvt.boldFont:xft:tamsyn:style=bold:pixelsize=14:antialias=true:hinting=true,xft:TamzenForPowerline:style=bold:size=13:antialiast=true:hinting=true,xft:Powerline Symbols:style=bold:size=13:antialiast=true:hinting=true
URxvt.imFont:xft:tamsyn:style=regular:pixelsize=14:antialias=true:hinting=true,xft:TamzenForPowerline:style=regular:size=13:antialiast=true:hinting=true,xft:Powerline Symbols:style=regular:size=13:antialiast=true:hinting=true
URxvt.italicFont:xft:tamsyn:style=italic:pizelsize=14:antialias=true:hinting=true,xft:TamzenForPowerline:style=italic:size=13:antialiast=true:hinting=true,xft:Powerline Symbols:style=italic:size=13:antialiast=true:hinting=true
URxvt.boldItalicFont:xft:tamsyn:style=bold italic:pixelsize=14:antialias=true:hinting=true,xft:TamzenForPowerline:style=bold italic:size=13:antialiast=true:hinting=true,xft:Powerline Symbols:style=bold italic:size=13:antialiast=true:hinting=true

!URxvt.font:xft:tamsyn:pixelsize=13:antialias=true:hinting=true,xft:TamzenForPowerline:pixelsize=13:antialiast=true:hinting=true,xft:Powerline Symbols:pixelsize=13:antialiast=true:hinting=true
!URxvt.boldFont:xft:tamsyn:style=bold:pixelsize=13:antialias=true:hinting=true,xft:TamzenForPowerline:style=bold:pixelsize=13:antialiast=true:hinting=true,xft:Powerline Symbols:style=bold:pixelsize=13:antialiast=true:hinting=true
!URxvt.imFont:xft:tamsyn:style=regular:pixelsize=13:antialias=true:hinting=true,xft:TamzenForPowerline:style=regular:pixelsize=13:antialiast=true:hinting=true,xft:Powerline Symbols:style=regular:pixelsize=13:antialiast=true:hinting=true
!URxvt.italicFont:xft:tamsyn:style=italic:pixelsize=13:antialias=true:hinting=true,xft:TamzenForPowerline:style=italic:pixelsize=13:antialiast=true:hinting=true,xft:Powerline Symbols:style=italic:pixelsize=13:antialiast=true:hinting=true
!URxvt.boldItalicFont:xft:tamsyn:style=bold italic:pixelsize=13:antialias=true:hinting=true,xft:TamzenForPowerline:style=bold italic:pixelsize=13:antialiast=true:hinting=true,xft:Powerline Symbols:style=bold italic:pixelsize=13:antialiast=true:hinting=true


! Fix font space
URxvt*letterSpace: -1

! Scrollbar
URxvt.scrollStyle:          rxvt
URxvt.scrollBar:            false

! Perl extensions
URxvt.perl-ext-common:      default,matcher
URxvt.matcher.button:       1
URxvt.urlLauncher:          qutebrowser

! Cursor
URxvt.cursorBlink:          true
URxvt.cursorUnderline:      false

! Pointer
URxvt.pointerBlank:         true

!!Source http://github.com/altercation/solarized
*fading: 40
*fadeColor: #002b36

*pointerColorBackground: #586e75
*pointerColorForeground: #93a1a1
